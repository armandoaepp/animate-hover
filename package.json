{
  "name": "animate-hover",
  "version": "1.0.2",
  "description": "animate css classes hover of help for fronend",
  "main": "gulpfile.js",
  "scripts": {
    "clean": "rimraf vendor",
    "vendor": "vendor-copy",
    "animate-full": "node-sass src/scss/animate-full.scss css/animate-full.css",
    "animate": "node-sass src/scss/animate-hover.scss css/animate-hover.css",
    "circle": "node-sass src/scss/animate-circle.scss css/animate-circle.css",
    "square": "node-sass src/scss/animate-square.scss css/animate-square.css",
    "dev": "npm run vendor & npm run animate & npm run circle & npm run square & npm run animate-full",
    "animate-min": "node-sass src/scss/animate-hover.scss css/animate-hover.min.css --output-style compressed",
    "circle-min": "node-sass src/scss/animate-circle.scss css/animate-circle.min.css --output-style compressed",
    "square-min": "node-sass src/scss/animate-square.scss css/animate-square.min.css --output-style compressed",
    "animate-full-min": "node-sass src/scss/animate-full.scss css/animate-full.min.css --output-style compressed",
    "prod": "npm run vendor & npm run animate-min & npm run circle-min & npm run square-min & npm run animate-full-min "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/armandoaepp/animate-hover.git"
  },
  "keywords": [
    "helper-hover"
  ],
  "author": "@armandoaepp",
  "license": "ISC",
  "dependencies": {
    "animate.css": "^3.7.0"
  },
  "devDependencies": {
    "node-sass": "^4.9.4",
    "rimraf": "^2.6.2",
    "vendor-copy": "^2.0.0"
  },
  "vendorCopy": [
    {
      "from": "node_modules/animate.css/animate.css",
      "to": "vendor/animate.css/animate.scss"
    }
  ]
}
